@namespace FastyBox.Web.Shared.Components

<th scope="col" class="@GetHeaderClasses()">
    @ChildContent
</th>

@code {
    [Parameter]
    public bool Sortable { get; set; }

    [Parameter]
    public bool Sorted { get; set; }

    [Parameter]
    public bool SortAscending { get; set; }

    [Parameter]
    public string Width { get; set; }

    [Parameter]
    public string Class { get; set; }

    [Parameter]
    public bool Align { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    private string GetHeaderClasses()
    {
        var classes = "px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider ";

        if (Align)
        {
            classes += "text-right ";
        }

        if (!string.IsNullOrEmpty(Width))
        {
            classes += $"w-{Width} ";
        }

        if (!string.IsNullOrEmpty(Class))
        {
            classes += $"{Class} ";
        }

        return classes.TrimEnd();
    }
}
