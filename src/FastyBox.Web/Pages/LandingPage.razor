@using FastyBox.Web.Resources
@using Microsoft.Extensions.Localization
@using MudBlazor
@inject IStringLocalizer<SharedResource> L
@inject NavigationManager NavigationManager

<MudContainer MaxWidth="MaxWidth.Large">
    <MudGrid>
        <MudItem xs="12" Class="text-center py-8">
            <MudText Typo="Typo.h2" Class="mb-4">@L["AppTagline"]</MudText>
            <MudText Typo="Typo.subtitle1" Class="mb-8">
                @L["The fastest and most reliable package forwarding service from the United States to Mexico. Deliveries in just 2 days in the border area."]
            </MudText>
            <div class="d-flex justify-center">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Class="mx-2"
                           OnClick="@(() => NavigationManager.NavigateTo("/identity/account/register"))">
                    @L["GetStarted"]
                </MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Large" Class="mx-2"
                           OnClick="@(() => NavigationManager.NavigateTo("#how-it-works"))">
                    @L["HowItWorks"]
                </MudButton>
            </div>
        </MudItem>
    </MudGrid>

    <MudDivider Class="my-8" />

    <MudText Typo="Typo.h4" Class="text-center mb-8" id="how-it-works">@L["OurProcess"]</MudText>
    <MudText Typo="Typo.subtitle1" Class="text-center mb-8">@L["Learn the simple steps to receive your packages quickly"]</MudText>

    <MudGrid>
        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="2" Class="h-100">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@L["Step1"]</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIcon Icon="@Icons.Material.Filled.PersonAdd" Color="Color.Primary" />
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>@L["Step1Desc"]</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="2" Class="h-100">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@L["Step2"]</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIcon Icon="@Icons.Material.Filled.ShoppingCart" Color="Color.Primary" />
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>@L["Step2Desc"]</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="2" Class="h-100">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@L["Step3"]</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIcon Icon="@Icons.Material.Filled.Inventory" Color="Color.Primary" />
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>@L["Step3Desc"]</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="2" Class="h-100">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@L["Step4"]</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIcon Icon="@Icons.Material.Filled.LocalShipping" Color="Color.Primary" />
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>@L["Step4Desc"]</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>